<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CheckEmployeeWorkSchedule</title>
</head>
<body>

	<form action="/AddEmployeeWorkSchedule/" method="POST">

		<select name="checkPeriodYear">
			<option value="2016">2016</option><option selected value="2017">2017</option>
		</select>
		年
		<select name="checkPeriodMonth">
			<option value="01">1</option><option  value="02">2</option>
			<option value="03">3</option><option  value="04">4</option>
			<option value="05">5</option><option  value="06">6</option>
			<option selected value="07">7</option><option  value="08">8</option>
			<option value="09">9</option><option  value="10">10</option>
			<option value="11">11</option><option  value="12">12</option>
		</select>
		月

		<button type="submit">加入班表</button>
	</form>	 
	<br>
	<form action="/" method="GET">
				<button type="submit">返回老闆權限</button>
	</form> 
	<br>
	<table border='1'>
	<tbody>
	      <td> 員工姓名 </td>
	      <td> 上班時刻 </td>  
	<%  for(var i=0; i<WorkSchedule.length; i++) {%>
		<tr>
		      <td><%= WorkSchedule[i].name %></td>
		      <td><%= WorkSchedule[i].workyear +'/'+ WorkSchedule[i].workmonth +'/'+ WorkSchedule[i].workday %>
		          <%= WorkSchedule[i].onlinehour +':'+ WorkSchedule[i].onlineminute+'-'+WorkSchedule[i].offlinehour +':'+ WorkSchedule[i].offlineminute%></td>
		</tr>
	<% } %>
	</tbody>
	</table>
</body>
</html>